#include<stdio.h>
int main(){
int i,j;
char matrice[5][5]= {
{'1','2','3','4','5'} ,
{'7','a','c','8','d'} ,
{'c','9','4','z','8'} ,
{'5','6','p','n','3'} ,
{'2','9','t','m','k'} 
} ;
for(i=0;i<5;i++){
	 for(j=0;j<5;j++)
	{       
     printf("%c  ",matrice[i][j]) ;
	}
		printf(" \n");
{
	
	 printf(" \n");}
}

 printf ("lignes d indice pair:  \n");  

    for (i=0;i<5;i+=2)
   { 
     for (j=0;j<5;j++) {
         printf("%c  ",matrice[i][j]);
}
	  printf("\n");
	}
 printf (" impair: \n");
 for(i=0;i<5;i++) { 
	 for(j=1;j<5;j++) {   
	     if  (j%2==0)   
		  {
     printf("%c ",matrice[i][j]);
}
}
     printf("\n");
}

	printf(" afficher la diagonale de gauche à droite :\n") ;
    for (i=0;i<5;i++){ 
      printf("%c" , matrice[i][i]) ; 
	}
	   printf("\n");

	printf(" afficher la diagonale de droite  à  gauche :\n") ;
	    for (i=0;i<5;i++){ 
	    printf("%c" , matrice[i][5-i-1]);
		}
		 printf("\n");
		 
return 0;
}
